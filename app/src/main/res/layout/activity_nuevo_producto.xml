<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nuevoProducto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nuevo Producto"
                android:textAlignment="center"
                android:textSize="20dp"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/name_nuevo_producto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="Nombre"
                android:drawableLeft="@drawable/product"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/product"
                android:layout_margin="5dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/cantidad_nuevo_producto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/cantidadproducto"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/cantidadproducto"
                android:hint="Cantidad Producción"
                android:inputType="number"/>

            <EditText
                android:id="@+id/status_nuevo_producto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/statusproducto"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/statusproducto"
                android:hint="Status"
                android:inputType="number"/>

            <EditText
                android:id="@+id/time_nuevo_producto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/timeproduct"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/timeproduct"
                android:focusable="false"
                android:clickable="true"
                android:onClick="dialogTime"
                android:hint="Time"
                android:inputType="time"/>

            <EditText
                android:id="@+id/descripcion_nuevo_producto"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:hint="Descripción"
                android:inputType="text|textMultiLine"/>

            <Button
                android:id="@+id/btncrearnuevoproducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Guardar "
                android:onClick="clickGuardar"
                android:layout_alignParentBottom="true"
                android:background="#03A9F4"
                android:textColor="#fff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>